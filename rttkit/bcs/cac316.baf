IF
  CheckStatGT(Myself,31,LOCKPICKING)
  Global("mensmala","LOCALS",0)
THEN
  RESPONSE #100
    ReallyForceSpellRES("CAC317",Myself)  // CAC317
    SetGlobal("mensmala","LOCALS",1)
END

